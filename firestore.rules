rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Visitors collection - Cloud Functions only (via Admin SDK)
    match /visitors/{uid} {
      // No direct client access - all operations go through Cloud Functions
      allow read: if false;
      allow write: if false;
    }

    // Identity graph - Cloud Functions only (via Admin SDK)
    match /identity_graph/{docId} {
      // No direct client access - all operations go through Cloud Functions
      allow read: if false;
      allow write: if false;
    }

    // Default deny all other collections
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
